extends layout/layout
block content
    .section.section-header: .wrapper
        .section-header-inner
            a(href="./").logo: img(src="./assets/img/logo.png", alt="")
            .section-header-actions
                a(href="#" toggle-popup="voucher").button.button-success
                    em.mdi.mdi-ticket-confirmation
                    | Activate voucher
                a(href="#" toggle-popup="auth").button.button-white
                    em.mdi.mdi-account
                    | Login
        .section-header-inner
            .section-header-text
                .section-header-text-title
                    strong Zuidhorn. 
                    | Kindpakket
                .section-header-text-description
                    | Welkom om de website van het kindpakket Zuidhorn. Op deze website vindt u een overzicht van de deelnemende winkeliers. Begin gelijk door rechtsboven in te loggen of uw voucher te activeren.
                a(href="#").button.button-success 
                    span Leer meer over hoe het
                    span systeem werkt
    
    .section.section-categories
        .wrapper
            h1.section-header Door te klikken op de blokken zoekt u de winkels die meedoen aan het systee

            .categories-list
                .categories-list-inner
                    mixin category_item(key, value)
                        .categories-item: .categories-item-inner
                            img(src="./assets/img/categories/" + key + ".jpg", alt="").categories-item-img
                            .categories-item-radio
                            .categories-item-title=value

                    +category_item('culture', 'Culture')
                    +category_item('education', 'Education')
                    +category_item('health', 'Health')
                    +category_item('home', 'Home')
                    +category_item('household', 'Household')
                    +category_item('personal', 'Personal')
                    +category_item('sport', 'Sport')
                    +category_item('support', 'Support')
                    +category_item('therapy', 'Therapy')
                    +category_item('transportation', 'Transportation')
                
                .categories-list-actions
                    a(href="#").button.button-primary
                        em.mdi.mdi-chevron-double-right
                        | Selecteer alles
                    a(href="#").button.button-success
                        em.mdi.mdi-magnify
                        | Filter

    .section.section-offices
        .section-offices-list
            .section-offices-list-header
                h4 We found for you 5 shops.
                small Please select one to see the details
            .section-offices-list-inner.nano: .nano-content
                -var count = 0;
                while ++count <= 5
                    .section.section-panel
                        .office-li
                            img(src="./assets/img/office-photo-sample.jpg", alt="").office-li-thumb
                            .office-li-name Ulgersmaweg, Groningen
                            .office-li-description
                                strong Adress: 
                                | Ulgersmaweg 35
                                br
                                strong Phone: 
                                | 065433312, 0(80)455654 
                                br
                                br
                                strong.text-primary Opening times:
                                br
                                div
                                    span.br
                                        strong MO: 
                                        | 10:00-18:00, 
                                    span.br
                                        strong TU: 
                                        | 09:00-18:00, 
                                    span.br
                                        strong WE: 
                                        | 09:00-18:00, 
                                div
                                    span.br
                                        strong TH: 
                                        | 09:00-20:00, 
                                    span.br
                                        strong FR: 
                                        | 09:00-18:00

        .section-offices-map(google-map)

    .section.section-how-it-works
        .bg-image
        .how-it-works-inner
            h1.how-it-works-title Hoe het systeem werkt
            .how-it-works-list
                .how-it-works-item 
                    em.how-it-works-item-number 1
                    | U heeft een brief ontvangen van de gemeente
                .how-it-works-item 
                    em.how-it-works-item-number 2
                    | In deze brief staat een activatie code
                .how-it-works-item 
                    em.how-it-works-item-number 3
                    | U activeert uw voucher op deze webiste door te drukken op de knop activeer voucher
                .how-it-works-item 
                    em.how-it-works-item-number 4
                    | Hierna zal u uw budget te zien krijgen
                .how-it-works-item 
                    em.how-it-works-item-number 5
                    | U print uw voucher code uit of mailt deze naar u zelf toe
                .how-it-works-item 
                    em.how-it-works-item-number 6
                    | U bekijkt het aanbod van de deelnemende winkels
                .how-it-works-item 
                    em.how-it-works-item-number 7
                    | De winkelier scant uw voucher
                .how-it-works-item 
                    em.how-it-works-item-number 8
                    | De kosten worden afgeschreben van uw budget

    .section.section-faq
        .faq-inner
            .faq-tabs: .faq-tabs-inner
