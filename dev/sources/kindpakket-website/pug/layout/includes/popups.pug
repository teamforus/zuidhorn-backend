    .popup-block.login
        .popup-block__h
            h2 Login
        form(action="")
            .row.col-xs-12
                label(for="email") Email
                input(name="email" type="text" placeholder="Email" ng-model="forms.login.values.email")#email
                p(ng-repeat="error in forms.login.errors.email track by $index" ng-bind="error").valid-error.text-danger
            .row.col-xs-12
                label(for="password") Password
                input(name="password" type="password" placeholder="Password" ng-model="forms.login.values.password")#email
                p(ng-repeat="error in forms.login.errors.password track by $index" ng-bind="error").valid-error.text-danger
            .cf
                .popup-block-logged
                    input(type="checkbox" name="logged" id="logged")
                    label.popup-block-logged__lab(for="logged") Keep me logged in
