extends layout/layout

block vars
    -var page = 'login';

block content
    .login-body
        article.container-login.center-block
            section
                ul.nav.nav-tabs.nav-justified
                    li.active: a(href="./login.html") Login
                    li: a(href='./restore.html') Forgot password
                .tab-content.tabs-login.col-lg-12.col-md-12.col-sm-12.cols-xs-12
                    .tab-pane.fade.active.in
                        form.form-horizontal(method='post', accept-charset='utf-8', autocomplete='off', role='form'): .col-xs-12
                            .form-group
                                label.sr-only(for='login') Email
                                input.form-control(type='text', name='login', placeholder='Email', tabindex='1', value='')
                            .form-group
                                label.sr-only(for='password') Password
                                input.form-control(type='password', name='password', placeholder='Password', value='', tabindex='2')
                            .form-group: .checkbox
                                label.control-label(for='remember_me')
                                    input(type='checkbox', name='remember_me', value='1', tabindex='3')
                                    |  Remember me
                            .row: a(href="./index.html").btn.btn-lg.btn-primary(type='submit', name='log-me-in', tabindex='5') Enter
