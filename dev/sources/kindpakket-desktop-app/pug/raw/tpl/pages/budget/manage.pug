.section.section-container: .wrapper 
    .section.section-title KindPakket
    .section.section-panel
        form(ng-submit="$ctrl.submitBudgetForm($event, $ctrl.forms.budget)").form.form-sm
            .row: .col.col-12: .form-heading Budget settings
            .row
                .col.col-6: .form-group
                    label.label Budget name
                    input(type="text" placeholder="Budget name" ng-model="$ctrl.forms.budget.values.name").form-control
                    p(ng-repeat="error in $ctrl.forms.budget.errors.name track by $index" ng-bind="error").text-danger
                .col.col-6: .form-group
                    label.label Amount per child
                    input(type="number" placeholder="Amount per child" ng-model="$ctrl.forms.budget.values.amount_per_child").form-control
                    p(ng-repeat="error in $ctrl.forms.budget.errors.amount_per_child track by $index" ng-bind="error").text-danger
            .row: .col.col-12
                button(type="submit")#submit.hidden
                label(for="submit").button.button-success Submit
                label(ng-show="$ctrl.forms.budget.success").button.button-text.disabled 
                    em.mdi.mdi-check
                    | Updated