div(ng-show="view == 'voucher_success_screen'"): .row
    .col-xs-12
        .form-group.text-center
            h1.mdi.mdi-check.text-center.text-primary
            h4 Success!
            p: a(href="#", ng-click="navigation.closeVoucherSuccessScreen($event)").btn.btn-primary Close

div(ng-show="view == 'settings'"): .row
    .col-xs-12
        .form-group
            label(for='device_id') Device ID
            select(name="device_id" select ng-options="item as item.name for item in deviceIdService.getOptions() track by item.id" ng-model="forms.settings.values.device_id").form-control
        .form-group.text-center
            a(href="#", ng-click="navigation.settingsFormSubmit($event, forms.settings)").btn.btn-primary Submit
            | &nbsp;&nbsp;&nbsp;
            a(href="#", ng-click="navigation.settingsFormCancel($event)").btn.btn-default Cancel

div(ng-show="view == 'device_pending_screen'"): .row
