extends layout/layout
block content
    .section.section-auth
        .section-auth-header
            .header-row: .wrapper.wrapper-lg
                .header-col
                    h1 
                        strong Zuidhorn. 
                        | Kindpakket Leverancier
                    p 
                        | Welkom om de website van het kindpakket Zuidhorn. Op deze website vindt u een overzicht van de deelnemende winkeliers. Meer weten over het kindpakket?
                        br
                        | Klik hier
                .header-col
                    .section.section-qr-code-login
                        .qr-code-icon: em.mdi.mdi-qrcode
                        a(href="#" toggle-popup).button.button-white
                            em.mdi.mdi-qrcode
                            | Login with QR-Code
    
    .section.section-download-app
        .wrapper
            .bg-text DOWNLOAD APP
        
            .download-row
                .download-col
                    .download-inner
                        h1 
                            | De app wordt momenteel 
                            br 
                            | alleen uitgeven via IOS
                        a(href="#").button.button-app-store
                            em.mdi.mdi-apple
                            .button-body
                                span Download it fron
                                strong APP STORE
                .download-col
                    img(src="./assets/img/ios-mockup.png")

    .section.section-faq
        .wrapper
            .faq-inner
                .faq-tabs: .faq-tabs-inner
                    h4.faq-tabs-title Veel gestelde vragen
                    a(href="#").faq-tab.active Lorem ipsum dolor sit amet
                    a(href="#").faq-tab Excepteur sint occaecat cupidatat non proident, sunt in culpa
                    a(href="#").faq-tab Numquam eius modi tempora incidunt
                    a(href="#").faq-tab Nemo enim ipsam voluptatem quia voluptas sit aspernatur aut odit aut fugit
                .faq-panes: .faq-panes-inner
                    -var i = 0;

                    while i++ < 5
                        .faq-pane(class=((i==1)?'active':''))
