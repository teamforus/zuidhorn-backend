extends layout/layout-panel
block content
    .section.section-container: .wrapper 
        .section.section-title Edit office

        .section.section-panel
            .form.form-sm
                .row: .col.col-12: .form-heading Details
                .row
                    .col.col-6
                        .form-group
                            label.label Email
                            input(type="email" placeholder="Email").form-control
                            a(href="#").button.button-text.button-sm
                                em.mdi.mdi-plus-circle
                                | ADD EMAIL
                    .col.col-6
                        .form-group
                            label.label Telephone
                            input(type="text" placeholder="Telephone").form-control
                            a(href="#").button.button-text.button-sm
                                em.mdi.mdi-plus-circle
                                | ADD TELEPHONE
                .row
                    .col.col-12
                        .form-group
                            label.label Address
                            input(type="text" placeholder="Address").form-control

                .row: .col.col-12: .form-heading Opening times
                .row
                    .col.col-5th: .form-group
                        label.label MO
                        select(placeholder="--:--").form-control
                            option(value="") 10:30
                        select(placeholder="--:--").form-control
                            option(value="") 15:30
                    .col.col-5th: .form-group
                        label.label TU
                        select(placeholder="--:--").form-control
                            option(value="") 10:30
                    .col.col-5th: .form-group
                        label.label WE
                        select(placeholder="--:--").form-control
                            option(value="") 10:30
                    .col.col-5th: .form-group
                        label.label TH
                        select(placeholder="--:--").form-control
                            option(value="") 10:30
                    .col.col-5th: .form-group
                        label.label FR
                        select(placeholder="--:--").form-control
                            option(value="") 10:30
                .row: .col.col-12: br

            a(href="#").button.button-success Submit
            | &nbsp;&nbsp;&nbsp;
            a(href="#").button.button-muted Cancel
